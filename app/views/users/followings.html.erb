<div class="container">  
  <div class="row">
      <div class="col md-7"> 
        <table class="table table-inverse">
       <thead> 
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead> 
    <% @users.each do |users|%>
      <tbody>
        <tr>
          <td><%= attachment_image_tag users, :profile_image, size:'40x40', format: 'jpg', fallback: "no_image.jpg"%></td>
          <td><%= users.name %></td>
          <td>フォロー数<%= users.followings.count %></td>
          <td>フォロワー数<%= users.followers.count %></td>
      </tbody>
      <% end %>
      </table>
      
   </div>
  </div>
</div>

